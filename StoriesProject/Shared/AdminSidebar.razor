@code {
    bool isAuthCollapsed = true; // Biến trạng thái đóng/mở

    void ToggleCollapse()
    {
        isAuthCollapsed = !isAuthCollapsed;
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("toggleSidebar");
        }
    }
